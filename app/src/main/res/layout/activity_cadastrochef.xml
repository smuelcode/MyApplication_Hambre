<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hambre.myapplication.Cadastrochef">

    <EditText
        android:id="@+id/senhacadc"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/Senha"
        android:layout_alignBottom="@+id/senhacadc1"
        android:layout_alignLeft="@+id/senhacadc"
        android:layout_alignStart="@+id/senhacadc"
        android:layout_marginBottom="112dp" />

    <EditText
        android:id="@+id/emailchefc"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/Email"

        android:layout_marginBottom="57dp"
        android:layout_above="@+id/senhacadc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/senhacadc1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Confirmar senha"

        android:layout_marginBottom="102dp"
        android:layout_above="@+id/cadchef"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/cadchef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:text="Cadastrar" />
     />
</RelativeLayout>
