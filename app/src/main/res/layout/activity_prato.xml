<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hambre.myapplication.Prato">

    <TextView
        android:id="@+id/nom_chef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Nome do Chef: "
        android:textSize="15dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@+id/nom_chef"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/nom_chef"
        android:layout_alignStart="@+id/nom_chef" />

    <TextView
        android:id="@+id/pt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prato oferecido :"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/nome"
        android:layout_alignLeft="@+id/nome"
        android:layout_alignStart="@+id/nome" />

    <TextView
        android:id="@+id/saida_prato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@+id/pt_dia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/inicio_p"
        android:layout_alignStart="@+id/inicio_p" />

    <TextView
        android:id="@+id/num_por"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Números de porções oferecidas:"
        android:textSize="15dp"
        android:layout_below="@+id/saida_prato"
        android:layout_alignLeft="@+id/pt_dia"
        android:layout_alignStart="@+id/pt_dia"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/saida_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/num_por"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/num_por"
        android:layout_alignStart="@+id/num_por" />

    <TextView
        android:id="@+id/inicio_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horário de inicio:"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/saida_numero"
        android:layout_alignRight="@+id/pt_dia"
        android:layout_alignEnd="@+id/pt_dia" />

    <TextView
        android:id="@+id/saida_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/inicio_p"
        android:layout_alignStart="@+id/inicio_p" />

    <TextView
        android:id="@+id/fim_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Horário final:"
        android:textSize="15dp"
        android:layout_below="@+id/saida_in"
        android:layout_alignLeft="@+id/saida_in"
        android:layout_alignStart="@+id/saida_in" />

    <TextView
        android:id="@+id/saida_fim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/saida_in"
        android:layout_alignStart="@+id/saida_in"
        android:layout_below="@+id/fim_p"
        android:layout_marginTop="15dp"
        android:text="" />

    <TextView
        android:id="@+id/valor_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Valor de cada porção:"
        android:textSize="15dp"
        android:layout_below="@+id/saida_fim"
        android:layout_alignLeft="@+id/saida_fim"
        android:layout_alignStart="@+id/saida_fim" />

    <TextView
        android:id="@+id/saida_valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:textSize="15dp"
        android:layout_below="@+id/valor_p"
        android:layout_alignLeft="@+id/valor_p"
        android:layout_alignStart="@+id/valor_p" />

    <Button
        android:id="@+id/fazer_pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="realizar pedido"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/saida_valor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
