<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hambre.myapplication.Anunciar_prato">

    <EditText
        android:id="@+id/horariofinal"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hora tÃ©rmino "
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="284dp"
        android:layout_above="@+id/Valor"
        android:layout_alignLeft="@+id/Valor"
        android:layout_alignStart="@+id/Valor"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/Valor"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Valor do prato "
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="335dp"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/anunciar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/horarioincial"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hora inicio "
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_below="@+id/quantidade"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <EditText
        android:id="@+id/prato"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Prato do dia"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="175dp"
        android:layout_marginTop="94dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/quantidade"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Quantidade de prato"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="117dp"
        android:layout_below="@+id/prato"
        android:layout_alignLeft="@+id/horarioincial"
        android:layout_alignStart="@+id/horarioincial"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/anunciar"
        android:layout_width="230dp"
        android:layout_height="41dp"
        android:text="Anunciar"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="416dp"
        android:layout_marginBottom="88dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
